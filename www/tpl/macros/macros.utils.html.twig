{% macro textHeader(author, text) %}
    <div class="row">
        <div class="col-lg-12">
            <div class="bs-component">
                <figure class="">
                    <blockquote class="blockquote">
                        <p class="mb-0">{{ text }}</p>
                    </blockquote>
                    <figcaption class="blockquote-footer">
                        {{ author }}
                    </figcaption>
                </figure>
            </div>
        </div>
    </div>
{% endmacro %}