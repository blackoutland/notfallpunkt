{% extends 'main.html.twig' %}

{% block title %}{{ localizations.chat_title }} @ {{ sys.system.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>{{ localizations.chat_title }}</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <p class="">
                {{ localizations.chat_intro|replace({'${minutes}' : settings.chat_message_lifetime_minutes}) }}
            </p>
        </div>
    </div>

    <div id="chat" class="border-1 border-primary d-flex align-items-stretch flex-column justify-content-center mb-4"
         style="height:100%">
        <div id="chatBox" class="flex-grow-1">
            <ul id="chatMsgList"></ul>
        </div>
        <div id="chatInput" class="d-flex flex-row">
            <label for="chatMessage"></label>
            <input autofocus type="text" name="message" id="chatMessage" value=""
                   placeholder="{{ localizations.chat_input_field_placeholder }}" class="flex-grow-1 p-2">
            <button type="button" class="btn btn-primary" id="chatSendButton"><i class="fa fa-send"></i> Senden</button>
        </div>
    </div>
{% endblock %}
